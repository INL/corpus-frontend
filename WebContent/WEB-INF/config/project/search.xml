    <DocumentProperties>
        <Property>
            <Name>Title</Name>
            <SearchField>titleCombined</SearchField>
            <DisplayField>title</DisplayField>
            <Function>title</Function>
        </Property>
        <Property>
            <Name>Author</Name>
            <SearchField>authorCombined</SearchField>
            <DisplayField>author</DisplayField>
            <Function>author</Function>
        </Property>
        <Property type="date">
            <Name>Publication year</Name>
            <SearchField>witnessYear_from</SearchField>
            <DisplayField>witnessYear_from</DisplayField>
            <Function>date</Function>
        </Property>
        <Property>
            <Name>Language variant</Name>
            <SearchField>languageVariant</SearchField>
            <DisplayField>languageVariant</DisplayField>
            <Values multiple="false">
                <Value value=""></Value>
                <Value value="NN">Dutch (Dutch)</Value>
                <Value value="BN">Dutch (Belgian)</Value>
            </Values>
        </Property>
        <Property>
            <Name>Medium</Name>
            <SearchField>medium</SearchField>
            <DisplayField>medium</DisplayField>
            <Values multiple="true">
                <Value value="blog" />
                <Value value="book" />
                <Value value="misc\|ephemera" />
                <Value value="misc\|other" />
                <Value value="misc\|teletext" />
                <Value value="misc\|web snippet" />
                <Value value="misc\|website" />
                <Value value="newspaper" />
                <Value value="periodical\|local" />
                <Value value="periodical\|magazine" />
                <Value value="reported speech" />
                <Value value="written to be spoken" />
            </Values>
        </Property>
    </DocumentProperties>
    <WordProperties>
        <Property>
            <Name>Wordform</Name>
            <Index>word</Index>
            <Sensitive>True</Sensitive>
            <Function>wordform</Function>
        </Property>
        <Property>
            <Name>Lemma</Name>
            <Index>lemma</Index>
            <Function>lemma</Function>
        </Property>
        <Property>
            <Name>P.o.S.</Name>
            <Index>pos</Index>
            <Function>pos</Function>
        </Property>
    </WordProperties>
