{
	"extends": ["tslint:recommended"],
	"rules": {
		// The following settings are taken care of by eslint
		"quotemark": false,
		"indent": false,
		"whitespace": false,

		// These are just rules I disagree with or rules that are overboard
		"interface-over-type-literal": false,
		"max-line-length": false,
		"arrow-parens": false,
		"object-literal-sort-keys": false,
		"trailing-comma": false,
		"radix": false,

		// These should eventually be fixed
		"prefer-const": {"severity": "warn"},
		"only-arrow-functions": {"severity": "warn"},
		"no-var-keyword": {"severity": "warn"},
		"curly": {"severity": "warn"},
		"semicolon": {"severity": "warn"},
		"object-literal-shorthand": {"severity": "warn"},

		// Eh.. consistent style I guess
		"space-before-function-paren": {"severity": "warn"},
		"eofline": {"severity": "warn"},
		"ordered-imports": {"severity": "warn"}
	}
}